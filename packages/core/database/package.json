{
  "name": "@bizbox/core-database",
  "version": "1.0.0",
  "description": "BizBox database utilities and migrations",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "migrate": "node dist/cli.js migrate",
    "migrate:status": "node dist/cli.js migrate:status",
    "db:init": "node dist/cli.js init"
  },
  "bin": {
    "bizbox-db": "./dist/cli.js"
  },
  "dependencies": {
    "@bizbox/shared-types": "workspace:*",
    "pg": "^8.11.0",
    "drizzle-orm": "^0.28.0",
    "commander": "^11.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@bizbox/eslint-config": "workspace:*",
    "@bizbox/typescript-config": "workspace:*",
    "@types/pg": "^8.10.0",
    "@types/jest": "^29.5.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  }
}