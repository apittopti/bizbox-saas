# BizBox Platform - Environment Configuration Example
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://bizbox:your-secure-password@localhost:5432/bizbox
POSTGRES_DB=bizbox
POSTGRES_USER=bizbox
POSTGRES_PASSWORD=your-secure-password
DB_HOST=postgres
DB_PORT=5432
DB_NAME=bizbox
DB_USER=bizbox
DB_PASSWORD=your-secure-password

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://default:your-redis-password@localhost:6379
REDIS_PASSWORD=your-redis-password

# =============================================================================
# AUTHENTICATION (NextAuth.js)
# =============================================================================
NEXTAUTH_SECRET=your-super-secure-nextauth-secret-key-change-this-in-production
NEXTAUTH_URL=http://localhost:3000

# Application-specific URLs
LANDING_URL=https://your-domain.com
ADMIN_URL=https://admin.your-domain.com
BUILDER_URL=https://builder.your-domain.com
CUSTOMER_URL=https://customer.your-domain.com
TENANT_URL=https://tenant.your-domain.com
SUPER_ADMIN_URL=https://super-admin.your-domain.com

# =============================================================================
# DOMAIN CONFIGURATION
# =============================================================================
LANDING_DOMAIN=your-domain.com
ADMIN_DOMAIN=admin.your-domain.com
BUILDER_DOMAIN=builder.your-domain.com
CUSTOMER_DOMAIN=customer.your-domain.com
TENANT_DOMAIN=your-tenant-domain.com
SUPER_ADMIN_DOMAIN=super-admin.your-domain.com

# =============================================================================
# PORT CONFIGURATION
# =============================================================================
LANDING_PORT=3000
ADMIN_PORT=3001
BUILDER_PORT=3002
CUSTOMER_PORT=3003
TENANT_PORT=3004
SUPER_ADMIN_PORT=3005

# =============================================================================
# STRIPE PAYMENT CONFIGURATION
# =============================================================================
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# =============================================================================
# AWS CONFIGURATION
# =============================================================================
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=your-email@your-domain.com
SMTP_PASSWORD=your-email-password

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================
MONITORING_ENABLED=true
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn-if-using-sentry

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
NODE_ENV=development
# Set to production for production deployments

# =============================================================================
# COOLIFY DEPLOYMENT PATHS
# =============================================================================
DATA_PATH=/data
BACKUP_PATH=/backups

# =============================================================================
# ADMIN CONFIGURATION
# =============================================================================
ADMIN_EMAIL=admin@your-domain.com

# =============================================================================
# MULTI-TENANT CONFIGURATION
# =============================================================================
TENANT_MODE=multi
DEFAULT_TENANT=default

# =============================================================================
# API KEYS AND INTEGRATIONS
# =============================================================================
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret

# =============================================================================
# SECURITY
# =============================================================================
ENCRYPTION_KEY=your-32-character-encryption-key
JWT_SECRET=your-jwt-secret-key
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=15

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_ANALYTICS=true
ENABLE_CHAT_SUPPORT=true
ENABLE_BILLING=true
ENABLE_MARKETPLACE=false

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
CACHE_TTL=3600
ENABLE_CACHE=true

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf

# =============================================================================
# WEBHOOK CONFIGURATION
# =============================================================================
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT=30000