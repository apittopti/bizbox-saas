# BizBox Multi-Tenant SaaS Platform
# Environment Variables Configuration

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
DATABASE_URL="postgresql://bizbox_user:secure_password@postgres:5432/bizbox"
DB_HOST="postgres"
DB_PORT="5432"
DB_NAME="bizbox"
DB_USER="bizbox_user"
DB_PASSWORD="secure_database_password_here"

# ==============================================
# REDIS CONFIGURATION
# ==============================================
REDIS_URL="redis://default:redis_password@redis:6379"
REDIS_PASSWORD="secure_redis_password_here"

# ==============================================
# NEXT.JS AUTHENTICATION
# ==============================================
NEXTAUTH_SECRET="super_secure_nextauth_secret_32_chars_min"
NEXTAUTH_URL="https://bizbox.yourdomain.com"

# Application-specific NextAuth URLs
ADMIN_NEXTAUTH_URL="https://admin.bizbox.yourdomain.com"
BUILDER_NEXTAUTH_URL="https://builder.bizbox.yourdomain.com"
CUSTOMER_NEXTAUTH_URL="https://app.bizbox.yourdomain.com"

# ==============================================
# STRIPE PAYMENT PROCESSING
# ==============================================
STRIPE_SECRET_KEY="sk_live_your_stripe_secret_key_here"
STRIPE_PUBLISHABLE_KEY="pk_live_your_stripe_publishable_key_here"
STRIPE_WEBHOOK_SECRET="whsec_your_stripe_webhook_secret_here"

# Test keys for development
STRIPE_SECRET_KEY_TEST="sk_test_your_stripe_test_secret_key_here"
STRIPE_PUBLISHABLE_KEY_TEST="pk_test_your_stripe_test_publishable_key_here"

# ==============================================
# EMAIL CONFIGURATION
# ==============================================
SMTP_HOST="smtp.yourmailprovider.com"
SMTP_PORT="587"
SMTP_USER="your_smtp_username"
SMTP_PASSWORD="your_smtp_password"
FROM_EMAIL="noreply@bizbox.yourdomain.com"

# ==============================================
# FILE STORAGE (AWS S3 or Compatible)
# ==============================================
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your_aws_access_key_id"
AWS_SECRET_ACCESS_KEY="your_aws_secret_access_key"
S3_BUCKET="bizbox-assets"
S3_ENDPOINT="https://s3.amazonaws.com"  # Use your S3-compatible endpoint

# ==============================================
# CDN CONFIGURATION
# ==============================================
CDN_URL="https://cdn.bizbox.yourdomain.com"
CDN_DOMAIN="cdn.bizbox.yourdomain.com"

# ==============================================
# MONITORING & ANALYTICS
# ==============================================
SENTRY_DSN="https://your_sentry_dsn@sentry.io/project_id"
GOOGLE_ANALYTICS_ID="GA-XXXXXXXXX"
HOTJAR_ID="your_hotjar_id"

# ==============================================
# LOGGING
# ==============================================
LOG_LEVEL="info"  # debug, info, warn, error
LOG_FORMAT="json"  # json, pretty

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
CORS_ORIGIN="https://bizbox.yourdomain.com,https://admin.bizbox.yourdomain.com,https://builder.bizbox.yourdomain.com,https://app.bizbox.yourdomain.com"
RATE_LIMIT_MAX="100"  # requests per window
RATE_LIMIT_WINDOW="900000"  # 15 minutes in milliseconds

# ==============================================
# SSL/TLS CONFIGURATION
# ==============================================
SSL_EMAIL="admin@yourdomain.com"  # For Let's Encrypt certificates

# ==============================================
# ADMIN CONFIGURATION
# ==============================================
ADMIN_EMAIL="admin@yourdomain.com"
SUPER_ADMIN_PASSWORD="secure_super_admin_password_here"

# ==============================================
# WEBHOOK CONFIGURATION
# ==============================================
WEBHOOK_SECRET="secure_webhook_secret_for_external_services"
WEBHOOK_ALERT_URL="https://hooks.slack.com/services/your/slack/webhook"

# ==============================================
# BACKUP CONFIGURATION
# ==============================================
BACKUP_S3_BUCKET="bizbox-backups"
BACKUP_ENCRYPTION_KEY="secure_backup_encryption_key_here"

# ==============================================
# MULTI-TENANT CONFIGURATION
# ==============================================
TENANT_MODE="multi"  # single or multi
DEFAULT_THEME="default"
ENABLE_CUSTOM_DOMAINS="true"

# ==============================================
# FEATURE FLAGS
# ==============================================
ENABLE_REGISTRATION="true"
ENABLE_TRIAL="true"
TRIAL_DAYS="14"
ENABLE_BILLING="true"
ENABLE_ANALYTICS="true"
ENABLE_CHAT_SUPPORT="true"

# ==============================================
# THIRD-PARTY INTEGRATIONS
# ==============================================
# OpenAI API for AI features
OPENAI_API_KEY="sk-your_openai_api_key_here"

# Twilio for SMS notifications
TWILIO_ACCOUNT_SID="your_twilio_account_sid"
TWILIO_AUTH_TOKEN="your_twilio_auth_token"
TWILIO_PHONE_NUMBER="+1234567890"

# Social Login Providers
GOOGLE_CLIENT_ID="your_google_oauth_client_id"
GOOGLE_CLIENT_SECRET="your_google_oauth_client_secret"

GITHUB_CLIENT_ID="your_github_oauth_client_id"
GITHUB_CLIENT_SECRET="your_github_oauth_client_secret"

# ==============================================
# PERFORMANCE & OPTIMIZATION
# ==============================================
ENABLE_CACHING="true"
CACHE_TTL="3600"  # 1 hour in seconds
MAX_UPLOAD_SIZE="10485760"  # 10MB in bytes

# ==============================================
# DEVELOPMENT CONFIGURATION
# ==============================================
NODE_ENV="production"  # development, staging, production
DEBUG="false"
MAINTENANCE_MODE="false"

# ==============================================
# COOLIFY SPECIFIC
# ==============================================
COOLIFY_APP_ID="bizbox-saas"
COOLIFY_PROJECT_ID="bizbox-project"
COOLIFY_ENVIRONMENT="production"