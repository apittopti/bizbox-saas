    echo "<h3>🛠️ Admin Dashboard</h3>" >> server.js && \
    echo "<p>Comprehensive tenant and user management interface</p>" >> server.js && \
    echo "<a href='http://194.164.89.92:3002'>Access Admin Dashboard →</a>" >> server.js && \
    echo "</div>" >> server.js && \
