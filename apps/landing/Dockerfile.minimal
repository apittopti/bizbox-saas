    echo "<a href='http://194.164.89.92:3003'>Launch Builder →</a>" >> server.js && \
    echo "</div>" >> server.js && \
    echo "<div class='service'>" >> server.js && \
    echo "<h3>👤 Customer Portal</h3>" >> server.js && \
    echo "<p>Self-service portal for account and billing management</p>" >> server.js && \
    echo "<a href='http://194.164.89.92:3004'>Customer Portal →</a>" >> server.js && \
    echo "</div>" >> server.js && \
    echo "<div class='service'>" >> server.js && \
    echo "<h3>🏢 Tenant Sites</h3>" >> server.js && \
